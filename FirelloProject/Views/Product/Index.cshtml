@model List<Product>
@{
    ViewData["Title"] = "Index";
}

   
    <div class="row" id="productList">
        <input type="hidden" value="@ViewBag.ProductCount" id="productCount"/>
        @foreach (var item in Model)
        {
        <div class="col-sm-6 col-md-4 col-lg-3 mt-3">

            <div class="product-item text-center" data-id="@item.Category.Name.ToLower()">
                <div class="img">
                    <a href="">
                        @if (item.ProductImages.Count > 0)
                        {
                        <img src="~/img/@item.ProductImages.FirstOrDefault().ImageUrl" class="img-fluid" alt="">
                        }
                        else
                        {
                        <img src="~/img/download.png" class="img-fluid" alt="">
                        }
                    </a>
                </div>
                <div class="title mt-3">
                    <h6>@item.Name</h6>
                </div>
                <div class="price">
                    <span class="text-black-50">Add to cart</span>
                    <span class="text-black-50">@item.Price</span>
                </div>
            </div>
        </div>
        }

    </div>
    <div class="row justify-content-center mt-5">
      <button id="loadMoreBtn" class="btn-primary btn">
          Load more...
      </button>
    </div>


   
